@model SITech.DTO.ManageUserViewModel

@*<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>*@

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   <p class="title">Create Local Login</p>
<div class="form-group">
    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label sr-only" })
    <div class="col-sm-12">
        <div class="input-group">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "new password" })
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
    </div>
</div>
   <div class="form-group">
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label sr-only" })
    <div class="col-sm-12">
        <div class="input-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "confirm password" })
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
    </div>
</div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle"></i> Set Password</button>
        </div>
    </div>
}
