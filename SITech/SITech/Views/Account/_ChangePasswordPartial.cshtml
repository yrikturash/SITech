@using Microsoft.AspNet.Identity
@model SITech.DTO.ManageUserViewModel

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
  
       <p class="title">Change Password:</p>
    <div class="form-group">
    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label sr-only" })
    <div class="col-sm-12">
        <div class="input-group">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "old password" })
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label sr-only" })
    <div class="col-sm-12">
        <div class="input-group">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "new password" })
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
    </div>
</div>
   <div class="form-group">
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label sr-only" })
    <div class="col-sm-12">
        <div class="input-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "confirm password" })
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
    </div>
</div>

  <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle"></i> Change Password</button>
        </div>
    </div>
}
